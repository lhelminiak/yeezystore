<h1>New Employee</h1>
<%= simple_form_for @new_item do |f| %>
  <%= f.input :kind, label: false, placeholder: 'Kind of clothing'%>
  <%= f.input :name, label: false, placeholder: 'Name' %>
  <%= f.input :image_url, label: false, placeholder: 'Image url' %>
  <%= f.input :size, label: false, placeholder: 'size' %>
  <%= f.input :price, label: false, placeholder: 'price' %>
  <%= f.input :description, label: false, placeholder: 'Enter a breif description' %>


  <%= f.button :submit %>

<% end %>
